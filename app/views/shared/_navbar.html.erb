<header>
    <a href="<%= root_path %>" class="logo">
    <img src="https://media.istockphoto.com/id/1400586811/vector/web.jpg?s=1024x1024&w=is&k=20&c=EtHJfnZVt4P0Xc355iTjtgoPKEa_dCHVUB22O461H4U="
    style="width: 50px; height: auto; border-radius: 50%; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    </a>

    
    <%# Navbar Links_to %>
    
    <%# Icons %>
    <div class="icons">
      <div class="dropdown">
        <button class="#" type="#" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-person"></i>
        </button>

      
      <!-- Add this Bootstrap Icons CDN in your <head> if not already included -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
      

        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
 

          <% if user_signed_in? %>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
            <li><%= link_to "Profile", user_home_path(current_user), class: "dropdown-item" %></li>
          <li><%= link_to "Products", "http://127.0.0.1:3000/products", class: "dropdown-item" %></li>

            <li><hr class="dropdown-divider"></li>       
            
            <li><%= link_to "Activities", "http://127.0.0.1:3000/activity_logs", class: "dropdown-item" %></li>


            <% if user_signed_in? && current_user.admin? %>
            <li><hr class="dropdown-divider"></li>
            
              <li><%= link_to "Admin Board", admin_root_path, class: "dropdown-item" %></li>
          

              <li><%= link_to "New Product", "http://127.0.0.1:3000/products/new", class: "dropdown-item" %></li>



            <% end %>
          <% else %>
 
       
            <li><%= link_to "Sign In", new_user_registration_path, class: "dropdown-item" %></li>
          <% end %>
          <% unless user_signed_in? %>
            <%# Portfolio Button for Jobs/etc %>
            <li><%= link_to "Portfolio Admin", admin_user_path, class: "dropdown-item" %></li>
          <% end %>
        </ul>
      </div>

      <%# History Section %>
      <% if current_user.present? %>
        <a href="<%= history_home_path(current_user) %>"><i class="bi bi-bag-check"></i></a>
      <% else %>
        <a href="<%= new_user_session_path %>"><i class="bi bi-bag-check"></i></a>
      <% end %>
      
      <%# Favorite Section %>
      <% if current_user.present? %>
  
      <% else %>
        <a href="<%= new_user_session_path %>"><i class="bi bi-bag-heart"></i></a>
      <% end %>

   
    </div>

    <li>
    <a href="http://127.0.0.1:3000" 
       style="text-decoration: none; color: #333; display: flex; align-items: center; gap: 8px;">
      <span style="font-size: 18px; display: inline-block;">
        <i class="bi bi-house-fill"></i>
      </span> 
      Home
    </a>
  </li>
</header>